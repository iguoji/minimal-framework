{
    "name": "iguoji/minimal-framework",
    "type": "library",
    "description": "a minimalism framework",
    "keywords": ["framework", "php", "swoole"],
    "homepage": "https://github.com/iguoji/minimal-framework",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "iguoji/minimal-database": "dev-master",
        "iguoji/minimal-cache": "dev-master",
        "topthink/think-template": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Minimal\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
